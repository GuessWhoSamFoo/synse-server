{
  "version": 1,
  "disable_existing_loggers": false,
  "formatters": {
    "error": {
      "format": "%(asctime)s - %(module)s:%(lineno)s [%(levelname)s] - %(message)s"
    }
  },

  "handlers": {
    "error": {
      "class": "logging.FileHandler",
      "level": "ERROR",
      "formatter": "error",
      "filename": "/proc/1/fd/2",
      "encoding": "utf8"
    }
  },

  "root": {
    "level": "ERROR",
    "handlers": [
      "error"
    ]
  }
}